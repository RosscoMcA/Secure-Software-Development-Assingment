<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"

    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.ross.mdpcoursework.MainActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/lbl_homepage"
        android:textSize="25sp"/>

    <View
        android:layout_height="2dip"
        android:layout_width="match_parent"
        android:background="#aaaa" />

    <Button
        android:id="@+id/btn_planned"
        android:layout_width="match_parent"
        android:layout_height="69dp"
        android:text="@string/btn_planned"
        android:textAllCaps="false"
        android:textSize="20sp" />

    <Button
        android:id="@+id/btn_accidents"
        android:layout_width="match_parent"
        android:layout_height="69dp"
        android:baselineAligned="false"
        android:text="@string/btn_accidents"
        android:textAllCaps="false"
        android:textSize="20sp" />

    <Button
        android:id="@+id/btn_unplanned"
        android:layout_width="match_parent"
        android:layout_height="69dp"
        android:text="@string/btn_roadworks"
        android:textAllCaps="false"
        android:textSize="20sp" />

</LinearLayout>
